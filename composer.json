{
    "name": "vakata/database",
    "description": "A database abstraction with support for various drivers.",
    "keywords": [
        "vakata",
        "database"
    ],
    "homepage": "https://github.com/vakata/database",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "vakata/collection" : "~1.5",
        "symfony/polyfill-mbstring" : "~1.8",
        "symfony/polyfill-iconv" : "~1.8"
    },
    "require-dev": {
        "phpunit/phpunit" : "6.*",
        "victorjonsson/markdowndocs": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "vakata\\database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\database\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpdoc-md generate src > api.md"
    }
}
