{
    "name": "vakata/database",
    "description": "A database abstraction with support for various drivers.",
    "keywords": [
        "vakata",
        "database"
    ],
    "homepage": "https://github.com/vakata/database",
    "license": "MIT",
    "authors": [
        {
            "name": "vakata",
            "email": "github@vakata.com",
            "homepage": "http://www.vakata.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/vakata/phpdoc-md"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "vakata/collection" : "^1.1.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "clean/phpdoc-md": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "vakata\\database\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vakata\\database\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "psr2": "php-cs-fixer fix ./src",
        "phpdoc": "phpdoc-md"
    }
}
